<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javabank.DashboardController">
   <top>
      <VBox prefHeight="50.0" prefWidth="701.0" style="-fx-background-color: black; -fx-padding: 20;">
         <Label fx:id="welcomeLabel" style="-fx-font-size: 16px;" text="Welcome, User!" textFill="#ecf0f1">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </Label>
         <Label fx:id="balanceLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Current Balance: $0.00" textFill="#f39c12">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Label>
      </VBox>
   </top>
   <center>
      <TabPane style="-fx-background-color: #ecf0f1;" tabClosingPolicy="UNAVAILABLE" tabMinHeight="30.0">
         <tabs>
            <Tab text="Cash In">
               <content>
                  <VBox alignment="CENTER" prefHeight="721.0" prefWidth="702.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30;">
                     <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cash In to Account" />
                     <VBox alignment="CENTER" maxWidth="585.0" prefHeight="576.0" prefWidth="585.0" spacing="15.0">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Select Mobile Banking Service:" />
                        <ComboBox fx:id="cashInServiceCombo" promptText="Choose Service" style="-fx-font-size: 16px; -fx-pref-width: 300;" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Mobile Number:" />
                        <HBox alignment="CENTER" spacing="10.0">
                           <TextField fx:id="cashInMobileField" promptText="01XXXXXXXXX" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-width: 200;" />
                           <Button fx:id="loadSavedNumberButton" onAction="#handleLoadSavedNumber" style="-fx-font-size: 12px; -fx-padding: 8 12; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 3;" text="Load Saved" />
                        </HBox>
                        
                        <CheckBox fx:id="saveNumberCheckbox" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Save this number for future use" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Enter Amount:" />
                        <TextField fx:id="cashInAmountField" promptText="0.00" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="PIN/Password:" />
                        <TextField fx:id="cashInPinField" promptText="Enter your mobile banking PIN" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <TextArea fx:id="cashInDescriptionArea" prefRowCount="2" promptText="Transaction note (optional)" style="-fx-font-size: 14px; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <Button fx:id="cashInButton" onAction="#handleCashIn" prefHeight="49.0" prefWidth="270.0" style="-fx-font-size: 16px; -fx-padding: 12 30; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Cash In" />
                     </VBox>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Cash Out">
               <content>
                  <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30;">
                     <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cash Out from Account" />
                     <VBox alignment="CENTER" maxWidth="584.0" prefHeight="561.0" prefWidth="584.0" spacing="15.0">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Select Mobile Banking Service:" />
                        <ComboBox fx:id="cashOutServiceCombo" promptText="Choose Service" style="-fx-font-size: 16px; -fx-pref-width: 300;" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Mobile Number:" />
                        <HBox alignment="CENTER" spacing="10.0">
                           <TextField fx:id="cashOutMobileField" promptText="01XXXXXXXXX" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-pref-width: 200;" />
                           <Button fx:id="loadSavedNumberButtonCashOut" onAction="#handleLoadSavedNumberCashOut" style="-fx-font-size: 12px; -fx-padding: 8 12; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 3;" text="Load Saved" />
                        </HBox>
                        
                        <CheckBox fx:id="saveNumberCheckboxCashOut" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Save this number for future use" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Enter Amount:" />
                        <TextField fx:id="cashOutAmountField" promptText="0.00" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="PIN/Password:" />
                        <TextField fx:id="cashOutPinField" promptText="Enter your mobile banking PIN" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <TextArea fx:id="cashOutDescriptionArea" prefRowCount="2" promptText="Transaction note (optional)" style="-fx-font-size: 14px; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        
                        <Button fx:id="cashOutButton" onAction="#handleCashOut" prefHeight="49.0" prefWidth="207.0" style="-fx-font-size: 16px; -fx-padding: 12 30; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Cash Out" />
                     </VBox>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Fund Transfer">
               <content>
                  <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30;">
                     <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Transfer Funds" />
                     <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Recipient Account:" />
                        <TextField fx:id="recipientAccountField" promptText="Account Number" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Enter Amount:" />
                        <TextField fx:id="transferAmountField" promptText="0.00" style="-fx-font-size: 16px; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <TextArea fx:id="transferDescriptionArea" prefRowCount="3" promptText="Transfer note (optional)" style="-fx-font-size: 14px; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;" />
                        <Button fx:id="transferButton" onAction="#handleTransfer" style="-fx-font-size: 16px; -fx-padding: 12 30; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Transfer Funds" />
                     </VBox>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Transaction History">
                <content>
                  <VBox spacing="15.0" style="-fx-background-color: #ffffff; -fx-padding: 20;">
                     <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Transaction History" />
                        <Button fx:id="refreshHistoryButton" onAction="#handleRefreshHistory" style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 3; -fx-cursor: hand;" text="Refresh" />
                     </HBox>
                     <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Filter by:" />
                        <ComboBox fx:id="transactionTypeFilter" promptText="All Transactions" style="-fx-font-size: 14px;" />
                        <DatePicker fx:id="fromDatePicker" promptText="From Date" style="-fx-font-size: 14px;" />
                        <DatePicker fx:id="toDatePicker" promptText="To Date" style="-fx-font-size: 14px;" />
                        <Button fx:id="applyFilterButton" onAction="#handleApplyFilter" style="-fx-font-size: 14px; -fx-padding: 6 12; -fx-background-color: #8e44ad; -fx-text-fill: white; -fx-background-radius: 3; -fx-cursor: hand;" text="Apply Filter" />
                     </HBox>
                     <TableView fx:id="transactionHistoryTable" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                        <columns>
                           <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                           <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                           <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                           <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                           <TableColumn fx:id="balanceAfterColumn" prefWidth="120.0" text="Balance After" />
                        </columns>
                     </TableView>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Saved Numbers">
               <content>
                  <VBox spacing="20.0" style="-fx-background-color: #ffffff; -fx-padding: 30;">
                     <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Manage Saved Numbers" />
                     
                     <VBox spacing="15.0">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Add New Number:" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <ComboBox fx:id="saveServiceCombo" promptText="Service" style="-fx-font-size: 14px; -fx-pref-width: 120;" />
                           <TextField fx:id="saveNumberField" promptText="Mobile Number" style="-fx-font-size: 14px; -fx-padding: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 3; -fx-background-radius: 3; -fx-pref-width: 150;" />
                           <TextField fx:id="saveNumberLabelField" promptText="Label (e.g., Personal)" style="-fx-font-size: 14px; -fx-padding: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 3; -fx-background-radius: 3; -fx-pref-width: 150;" />
                           <Button fx:id="addNumberButton" onAction="#handleAddSavedNumber" style="-fx-font-size: 14px; -fx-padding: 8 15; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 3;" text="Add" />
                        </HBox>
                     </VBox>
                     
                     <VBox spacing="10.0">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Saved Numbers:" />
                        <TableView fx:id="savedNumbersTable" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-pref-height: 300;">
                           <columns>
                              <TableColumn fx:id="serviceColumn" prefWidth="100.0" text="Service" />
                              <TableColumn fx:id="numberColumn" prefWidth="150.0" text="Number" />
                              <TableColumn fx:id="labelColumn" prefWidth="150.0" text="Label" />
                              <TableColumn fx:id="actionColumn" prefWidth="100.0" text="Action" />
                           </columns>
                        </TableView>
                     </VBox>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
